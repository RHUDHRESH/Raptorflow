# ==============================================================================
# RAPTORFLOW PRODUCTION ENVIRONMENT VARIABLES
# ==============================================================================

# ------------------------------------------------------------------------------
# 1. APPLICATION CONFIGURATION
# ------------------------------------------------------------------------------
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
NEXT_PUBLIC_APP_ENV=production

# Application URLs
NEXT_PUBLIC_APP_URL=https://raptorflow.com
NEXT_PUBLIC_API_URL=https://api.raptorflow.com

# ------------------------------------------------------------------------------
# 2. SUPABASE CONFIGURATION (PRODUCTION)
# ------------------------------------------------------------------------------
# Replace with your actual production Supabase values
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
SUPABASE_URL=https://your-project.supabase.co

# ------------------------------------------------------------------------------
# 3. EMAIL SERVICE (RESEND)
# ------------------------------------------------------------------------------
RESEND_API_KEY=re_your_production_resend_api_key
RESEND_FROM_EMAIL=noreply@raptorflow.com
RESEND_VERIFIED_EMAIL=support@raptorflow.com

# ------------------------------------------------------------------------------
# 4. SECURITY CONFIGURATION
# ------------------------------------------------------------------------------
# JWT Configuration
NEXTAUTH_SECRET=your-super-secret-jwt-key-min-32-characters-long
NEXTAUTH_URL=https://raptorflow.com

# Session Security
SESSION_SECRET=your-session-secret-key-min-32-characters
SESSION_MAX_AGE=2592000  # 30 days in seconds

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key
HASH_SALT=your-hash-salt-key

# ------------------------------------------------------------------------------
# 5. RATE LIMITING
# ------------------------------------------------------------------------------
RATE_LIMIT_ANONYMOUS=10
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_ADMIN=1000

# Redis Configuration (for rate limiting)
UPSTASH_REDIS_URL=https://your-production-redis.upstash.io
UPSTASH_REDIS_TOKEN=your-production-redis-token
REDIS_URL=redis://your-production-redis:6379

# ------------------------------------------------------------------------------
# 6. GOOGLE CLOUD CONFIGURATION
# ------------------------------------------------------------------------------
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_LOCATION=us-central1

# Google Cloud Storage
GCS_INGEST_BUCKET=raptorflow-ingest-prod
GCS_GOLD_BUCKET=raptorflow-gold-prod
GCS_MODEL_BUCKET=raptorflow-models-prod
GCS_LOG_BUCKET=raptorflow-logs-prod

# ------------------------------------------------------------------------------
# 7. MONITORING & LOGGING
# ------------------------------------------------------------------------------
# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/raptorflow.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Health Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ------------------------------------------------------------------------------
# 8. PAYMENT CONFIGURATION (PHONEPE)
# ------------------------------------------------------------------------------
PHONEPE_CLIENT_ID=your-phonepe-client-id
PHONEPE_CLIENT_SECRET=your-phonepe-client-secret
PHONEPE_CLIENT_VERSION=1
PHONEPE_ENV=PRODUCTION
PHONEPE_MERCHANT_ID=MERCHANT123456

# PhonePe Webhook
PHONEPE_WEBHOOK_USERNAME=raptorflow-webhook
PHONEPE_WEBHOOK_PASSWORD=your-webhook-secret-key
PHONEPE_WEBHOOK_ENDPOINT=https://api.raptorflow.com/webhooks/phonepe

# ------------------------------------------------------------------------------
# 9. THIRD-PARTY SERVICES
# ------------------------------------------------------------------------------
# OpenAI (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Google Services
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# ------------------------------------------------------------------------------
# 10. CDN & STATIC ASSETS
# ------------------------------------------------------------------------------
NEXT_PUBLIC_CDN_URL=https://cdn.raptorflow.com
ASSET_URL=https://assets.raptorflow.com

# ------------------------------------------------------------------------------
# 11. DATABASE CONNECTION POOLING
# ------------------------------------------------------------------------------
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=30000

# ------------------------------------------------------------------------------
# 12. CORS & SECURITY HEADERS
# ------------------------------------------------------------------------------
CORS_ORIGIN=https://raptorflow.com,https://www.raptorflow.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Security Headers
SECURITY_FRAME_ANCESTORS=none
SECURITY_FRAME_DENY=true
SECURITY_CONTENT_TYPE_OPTIONS=nosniff
SECURITY_XSS_PROTECTION=1; mode=block
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin

# ------------------------------------------------------------------------------
# 13. FEATURE FLAGS
# ------------------------------------------------------------------------------
FEATURE_AUTHENTICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_WORKSPACES=true
FEATURE_ANALYTICS=true
FEATURE_MONITORING=true
FEATURE_RATE_LIMITING=true
FEATURE_EMAIL_NOTIFICATIONS=true

# ------------------------------------------------------------------------------
# 14. PERFORMANCE & OPTIMIZATION
# ------------------------------------------------------------------------------
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Image Optimization
NEXT_PUBLIC_IMAGES_DOMAINS=raptorflow.com,cdn.raptorflow.com
NEXT_PUBLIC_IMAGES_LOADER=default

# ------------------------------------------------------------------------------
# 15. DEVELOPMENT & DEBUG (DISABLE IN PRODUCTION)
# ------------------------------------------------------------------------------
# DEBUG=false
# DEVELOPMENT_MODE=false
# MOCK_SERVICES=false
# SKIP_AUTH=false
# LOG_SQL_QUERIES=false

# ------------------------------------------------------------------------------
# 16. BACKUP & MAINTENANCE
# ------------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=raptorflow-backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="RaptorFlow is temporarily unavailable for maintenance"

# ==============================================================================
# INSTRUCTIONS FOR DEPLOYMENT
# ==============================================================================
#
# 1. Replace all placeholder values with actual production values
# 2. Ensure all secrets are at least 32 characters long
# 3. Store this file securely with restricted permissions (chmod 600)
# 4. Never commit this file to version control
# 5. Use environment-specific secrets management in production
# 6. Test all integrations before going live
#
# ==============================================================================
