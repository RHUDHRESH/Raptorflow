# =================================================================
# RAPTORFLOW CORE ENVIRONMENT CONFIGURATION (2026)
# =================================================================

# --- Application Setup ---
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# --- Supabase (Database, Auth & Storage) ---
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret
SUPABASE_URL=your_supabase_url # Some backend services use this

# --- Google Cloud Platform (Vertex AI & GCS) ---
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=./raptorflow-storage-key.json
VERTEX_AI_PROJECT_ID=your_gcp_project_id
VERTEX_AI_LOCATION=us-central1 # e.g., us-central1
GCS_BUCKET_NAME=raptorflow-uploads
GCS_CDN_URL=https://storage.googleapis.com/raptorflow-uploads

# --- Upstash Redis (Caching & Rate Limiting) ---
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token
UPSTASH_REDIS_URL=your_upstash_redis_url # For backend python clients
UPSTASH_REDIS_TOKEN=your_upstash_redis_token

# --- Resend (Email Service) ---
RESEND_API_KEY=re_your_api_key
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_VERIFIED_EMAIL=your_verified_email@gmail.com

# --- PhonePe Payment Gateway (Latest 2026 API) ---
PHONEPE_CLIENT_ID=your_client_id_here
PHONEPE_CLIENT_SECRET=your_client_secret_here
PHONEPE_MERCHANT_ID=MERCHANTXXXXXX
PHONEPE_ENV=UAT # Options: UAT (sandbox) or PRODUCTION
PHONEPE_CLIENT_VERSION=1
PHONEPE_WEBHOOK_USERNAME=your_webhook_username
PHONEPE_WEBHOOK_PASSWORD=your_webhook_password
PHONEPE_SUCCESS_URL=http://localhost:3000/onboarding/payment/status
PHONEPE_CALLBACK_URL=http://localhost:3000/api/webhooks/phonepe

# --- Sentry (Monitoring & Error Tracking) ---
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# --- Search & Scraper (SERP) ---
BRAVE_SEARCH_API_KEY=your_brave_key # Optional: Fallback to DuckDuckGo (Free)
GOOGLE_SEARCH_ENGINE_ID=your_google_cx_id
SERPER_API_KEY=your_serper_key

# --- Legacy/Deprecated (Do Not Use for 2026) ---
# PHONEPE_SALT_KEY=deprecated
# PHONEPE_SALT_INDEX=deprecated
# SMTP_USER=deprecated_in_favor_of_resend
# SMTP_PASS=deprecated_in_favor_of_resend