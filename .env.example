# RaptorFlow Environment Configuration Template
# Copy this file to .env and fill in your values

# ==========================================
# VERTEX AI CONFIGURATION (REQUIRED)
# ==========================================
VERTEX_AI_API_KEY=your_vertex_ai_api_key_here
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=us-central1
VERTEX_AI_API_KEY_FALLBACK=your_fallback_key
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Default AI Model (UNIVERSALLY SET TO GEMINI 1.5 FLASH)
DEFAULT_AI_MODEL=gemini-1.5-flash
VERTEX_AI_MODEL=gemini-1.5-flash

# Alternative AI Keys
INFERENCE_SIMPLE=your_simple_api_key
GOOGLE_API_KEY=your_google_api_key

# ==========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ==========================================
# Frontend URLs
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Backend Service Role (SECRET)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==========================================
# REDIS CONFIGURATION (REQUIRED)
# ==========================================
# Local Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Or Upstash Redis (Cloud)
UPSTASH_REDIS_REST_URL=https://your-project.upstash.io/redis
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# ==========================================
# EXTERNAL TOOLS CONFIGURATION (REQUIRED)
# ==========================================
# Tavily Search API
TAVILY_API_KEY=your_tavily_api_key

# Web Scraping
SCRAPING_API_KEY=your_scraping_api_key
SCRAPING_BEARER_TOKEN=your_scraping_bearer_token

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket_name

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
# Environment
NODE_ENV=development
ENVIRONMENT=development

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Vertex AI (Frontend)
NEXT_PUBLIC_VERTEX_AI_API_KEY=your_vertex_ai_api_key_here

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
# Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
TRACE_ENABLED=true

# ==========================================
# RATE LIMITING CONFIGURATION
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ==========================================
# FEATURE FLAGS
# ==========================================
# AI Features
AI_FEATURES_ENABLED=true
ONBOARDING_ENABLED=true
ICP_GENERATION_ENABLED=true

# Advanced Features
OCR_ENABLED=true
RAG_ENABLED=true
MEMORY_SYSTEM_ENABLED=true

# Development Features
DEBUG_MODE=true
VERBOSE_LOGGING=true
HOT_RELOAD=true

# ==========================================
# PHONEPE PAYMENT GATEWAY CONFIGURATION
# ==========================================
# PhonePe API Credentials (get from PhonePe Business Dashboard)
PHONEPE_CLIENT_ID=your_phonepe_client_id
PHONEPE_CLIENT_SECRET=your_phonepe_client_secret
PHONEPE_CLIENT_VERSION=1
PHONEPE_MERCHANT_ID=your_phonepe_merchant_id
PHONEPE_SALT_KEY=your_phonepe_salt_key
PHONEPE_KEY_INDEX=1

# PhonePe Environment (sandbox or production)
PHONEPE_ENV=sandbox

# PhonePe Webhook Configuration
PHONEPE_WEBHOOK_USERNAME=your_webhook_username
PHONEPE_WEBHOOK_PASSWORD=your_webhook_password

# PhonePe Callback URLs
PHONEPE_SUCCESS_URL=http://localhost:3000/payment/success
PHONEPE_FAILURE_URL=http://localhost:3000/payment/failure
PHONEPE_WEBHOOK_URL=http://localhost:8000/api/payments/webhook

# ==========================================
# DEVELOPMENT OVERRIDES
# ==========================================
# Skip SSL verification (development only)
SKIP_SSL_VERIFY=true

# Mock external services (development only)
MOCK_EXTERNAL_APIS=false

# Enable debug endpoints
DEBUG_ENDPOINTS_ENABLED=true
