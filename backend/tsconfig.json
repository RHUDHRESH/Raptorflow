{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": [
    "src/index.ts",
    "src/config/env.ts",
    "src/lib/supabase.ts",
    "src/lib/requireSupabaseUser.ts",
    "src/lib/redis.ts",
    "src/lib/rateLimit.ts",
    "src/routes/email.ts",
    "src/routes/storage.ts"
  ],
  "exclude": ["node_modules", "dist"]
}

