# PhonePe Payment Gateway Configuration
# Add these to your .env file or environment variables

# PhonePe API Configuration
PHONEPE_CLIENT_ID=your_phonepe_client_id
PHONEPE_CLIENT_SECRET=your_phonepe_client_secret
PHONEPE_CLIENT_VERSION=2
PHONEPE_ENV=SANDBOX  # or PRODUCTION for live transactions

# PhonePe Webhook Configuration
PHONEPE_WEBHOOK_USERNAME=your_webhook_username
PHONEPE_WEBHOOK_PASSWORD=your_webhook_password

# PhonePe Callback URLs (configure in PhonePe dashboard)
PHONEPE_CALLBACK_URL=https://your-domain.com/v1/payments/callback
PHONEPE_REDIRECT_URL=https://your-domain.com/billing/success

# Payment Redirect Allowlist (comma-separated origins)
PAYMENT_REDIRECT_ALLOWLIST=https://your-domain.com,https://app.your-domain.com,http://localhost:3000

# Frontend URL for payment redirects
FRONTEND_URL=https://app.your-domain.com

# RBI Compliance Settings
PAYMENT_MAX_AMOUNT_INR=5000  # Maximum amount for autopay payments

# Database Settings (ensure these are configured)
DATABASE_URL=postgresql://user:password@localhost:5432/raptorflow

# Notification System (for payment notifications)
NOTIFICATION_SERVICE_URL=https://your-domain.com/v1/notifications
