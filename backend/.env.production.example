# RaptorFlow Backend Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Application Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=4

# CORS Security (REQUIRED for production)
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Redis Configuration (Upstash)
UPSTASH_REDIS_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_TOKEN=your-redis-token

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_LOCATION=us-central1

# Vertex AI Configuration
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-2.0-flash-exp

# AI Rate Limiting
AI_REQUESTS_PER_MINUTE=60
AI_REQUESTS_PER_HOUR=1000

# Budget Controls
DAILY_AI_BUDGET=10.0
MONTHLY_AI_BUDGET=100.0

# API Keys (Use Secret Manager in production)
OPENAI_API_KEY=your-openai-api-key
SERPER_API_KEY=your-serper-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_ALERTS=true

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HTTPS=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Worker Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,txt,doc,docx

# External Services
WEBHOOK_URL=your-webhook-url
WEBHOOK_SECRET=your-webhook-secret

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Performance Configuration
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_ASYNC_WORKERS=true

# Development/Debug (REMOVE IN PRODUCTION)
# DEVELOPMENT_MODE=true
# MOCK_SERVICES=false
# SKIP_AUTH=false
