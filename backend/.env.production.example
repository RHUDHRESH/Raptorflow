# RaptorFlow Backend Production Environment Variables
# Reconstruction mode (no auth, no payments).
# Copy this file to backend/.env.production and fill in real values.

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# API path compatibility
# Keeps /api/v1/* working by rewriting to /api/*.
ENABLE_LEGACY_API_PATHS=true
ENABLE_LEGACY_V1=false

# CORS
# For production, set this to your real app domain(s).
CORS_ORIGINS=https://app.yourdomain.com

# Database (Required)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Muse (Optional: Vertex AI)
VERTEX_AI_PROJECT_ID=your_gcp_project_id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-2.0-flash-exp
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Redis (Optional)
REDIS_URL=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Monitoring (Optional)
SENTRY_DSN=
