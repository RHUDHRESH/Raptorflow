# ============================================================
# RAPTORFLOW BACKEND — Environment Template
# ============================================================
# Copy to `.env` and fill in real values.
# Canonical backend: FastAPI app via `backend/app_factory.py`.
# Tenant boundary: workspace id via `x-workspace-id` header.

# --- Runtime ---
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# --- Security ---
SECRET_KEY=change-me-to-random-32-chars-minimum

# --- API Compat ---
ENABLE_LEGACY_API_PATHS=true
ENABLE_LEGACY_V1=false

# --- Supabase (Database + Storage) ---
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_STORAGE_BUCKET=uploads

# --- Vertex AI ---
VERTEX_AI_PROJECT_ID=your_gcp_project_id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-2.0-flash-exp

# --- Upstash Redis (Optional — caching + rate limiting) ---
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --- Resend (Email) ---
RESEND_API_KEY=
EMAIL_FROM=noreply@yourdomain.com

# --- Sentry (Monitoring) ---
SENTRY_DSN=

# --- CORS ---
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# --- Business Context Templates ---
DEFAULT_BUSINESS_TEMPLATE=saas
