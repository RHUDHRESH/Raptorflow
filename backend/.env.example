# RaptorFlow 2.0 Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Configuration
APP_NAME=RaptorFlow 2.0
APP_VERSION=2.0.0
DEBUG=False
ENVIRONMENT=development  # development, staging, production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5

# Cache TTLs (in seconds)
CACHE_TTL_RESEARCH=604800    # 7 days
CACHE_TTL_PERSONA=2592000     # 30 days
CACHE_TTL_CONTENT=86400       # 24 hours

# Task Queue (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your_secret_key_here_generate_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30 days

# Social Media APIs (Optional)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
INSTAGRAM_ACCESS_TOKEN=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
YOUTUBE_API_KEY=

# Canva API (Optional)
CANVA_API_KEY=

# Google Cloud (Optional - for Vertex AI)
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# Monitoring & Logging
SENTRY_DSN=  # Optional
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
STRUCTURED_LOGGING=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Agent Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_SECONDS=300
MAX_RETRIES=3

# Feature Flags
ENABLE_AMBIENT_SEARCH=True
ENABLE_WEB_SCRAPING=True
ENABLE_SOCIAL_POSTING=False  # Disabled by default for safety

# Semantic Memory & Vector DB
USE_CHROMADB=False  # Set to True to enable ChromaDB for semantic search
CHROMADB_PATH=./data/chromadb  # Path for ChromaDB persistence
EMBEDDING_MODEL=all-MiniLM-L6-v2  # Sentence transformer model for embeddings

# Optional: Pinecone Vector DB (for production)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=

# Language Engine
LANGUAGE_TOOL_API_KEY=  # Optional: LanguageTool API key for grammar checking
ENABLE_GRAMMAR_API=False  # Set to True to use external grammar API

# Performance Prediction
MIN_HISTORICAL_DATA_POINTS=10  # Minimum data points for predictions
PREDICTION_CONFIDENCE_THRESHOLD=0.7  # Minimum confidence for predictions

# Meta-Learning
META_LEARNING_LOOKBACK_DAYS=90  # Default lookback period for learning
MIN_LEARNING_SAMPLES=20  # Minimum samples needed for meta-learning

# Agent Swarm
MAX_SWARM_AGENTS=5  # Maximum agents in a swarm debate
MAX_DEBATE_ROUNDS=3  # Maximum debate rounds
SWARM_TEMPERATURE=0.8  # Temperature for agent diversity
