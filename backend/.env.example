# Raptorflow Production Environment Variables
# Copy this file to .env and fill in your actual values

# REQUIRED: Upstash Redis Configuration
UPSTASH_REDIS_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_TOKEN=your-upstash-redis-token

# REQUIRED: Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# REQUIRED: GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# REQUIRED: GCS Configuration
GCS_BUCKET_NAME=raptorflow-uploads
GCS_BUCKET_PREFIX=prod
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# GCS Settings
GCS_STORAGE_CLASS=STANDARD
GCS_MAX_FILE_SIZE=5368709120  # 5GB in bytes
GCS_CHUNK_SIZE=8388608        # 8MB in bytes
GCS_UPLOAD_TIMEOUT=300         # 5 minutes
GCS_DOWNLOAD_TIMEOUT=300       # 5 minutes

# GCS Lifecycle Settings
GCS_RETENTION_DAYS=365
GCS_ENABLE_VERSIONING=true
GCS_ENABLE_LIFECYCLE=true

# REQUIRED: AI Services
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# Service Configuration
ENVIRONMENT=production
DEBUG=false
MOCK_REDIS=false

# Performance Settings
REDIS_MAX_CONNECTIONS=20
CACHE_TTL=3600
SESSION_TTL=1800

# Database Connection Pooling (Production Ready)
DB_MIN_CONNECTIONS=10
DB_MAX_CONNECTIONS=50
DB_CONNECTION_TIMEOUT=30.0
DB_IDLE_TIMEOUT=300.0
DB_MAX_LIFETIME=3600.0
DB_HEALTH_CHECK_INTERVAL=60.0

# Security Settings
REDIS_ENCRYPTION_KEY=your-32-byte-encryption-key
REDIS_ENABLE_ENCRYPTION=true

# Monitoring & Logging
CLOUD_LOGGING_ENABLED=true
PROMETHEUS_ENABLED=true
SENTRY_DSN=your-sentry-dsn

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_USAGE_TRACKING=true
ENABLE_BACKGROUND_JOBS=true

# Legacy Variables (deprecated)
AGENT_PROCESSOR=your_agent_processor_here
ANALYSIS=your_analysis_here
CACHE_INVALIDATOR=your_cache_invalidator_here
CONTENT=your_content_here
CURRENT_STATE=your_current_state_here
DELETION_RESULT=your_deletion_result_here
ERROR_CODE=your_error_code_here
EVENT_TYPE=your_event_type_here
FINAL_CONTENT=your_final_content_here
GRANT_TYPE=your_grant_type_here
ITEMS_TO_DELETE=your_items_to_delete_here
ITEM_ID=your_item_id_here
JOB_TYPE=your_job_type_here
METHOD=your_method_here
MODEL_NAME=your_model_name_here
NOTIFICATION_SENDER=your_notification_sender_here
OUTLINE=your_outline_here
REGISTRY_KEY=your_registry_key_here
REPORT_GENERATOR=your_report_generator_here
REQUIREMENTS=your_requirements_here
RESEARCH_DATA=your_research_data_here
RESULT=your_result_here
SESSION_CLEANER=your_session_cleaner_here
SOURCE=your_source_here
STR=your_str_here
TYPE=your_type_here
UPDATED_STATE=your_updated_state_here
USAGE_AGGREGATOR=your_usage_aggregator_here
VALIDATION=your_validation_here
VERIFICATION=your_verification_here
WEBHOOK_PROCESSOR=your_webhook_processor_here
